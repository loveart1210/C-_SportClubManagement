<Window x:Class="SportsClubManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsClubManagement"
        xmlns:vm="clr-namespace:SportsClubManagement.ViewModels"
        xmlns:views="clr-namespace:SportsClubManagement.Views"
        mc:Ignorable="d"
        Title="Quản lý Câu lạc bộ Thể thao" Height="700" Width="1200" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TeamsViewModel}">
            <views:TeamsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TeamDetailViewModel}">
            <views:TeamDetailView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProfileViewModel}">
            <views:ProfileView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UserManagementViewModel}">
            <views:UserManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PersonalScheduleViewModel}">
            <views:PersonalScheduleView />
        </DataTemplate>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/> <!-- Top Bar -->
            <RowDefinition Height="*"/>    <!-- Main Body -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="#1976D2" Padding="15,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- App Title -->
                <TextBlock Text="⚽ Quản lý Câu lạc bộ Thể thao" 
                           Foreground="White" FontSize="18" FontWeight="Bold"
                           VerticalAlignment="Center"/>
                
                <!-- User Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="{Binding UserAvatar}" Width="35" Height="35" Margin="0,0,10,0" Stretch="UniformToFill"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding UserName}" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding UserRole}" Foreground="#E0E0E0" FontSize="11"/>
                    </StackPanel>
                    <Button Content="Đăng xuất" Command="{Binding LogoutCommand}" 
                            Padding="12,8" Margin="20,0,0,0"
                            Background="#FF5252" Foreground="White" FontWeight="SemiBold"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/> <!-- Sidebar -->
                <ColumnDefinition Width="*"/>   <!-- Content -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="0,20,0,0">
                        <!-- Navigation Buttons -->
                        <Button Content="📊 Dashboard" Command="{Binding NavigateToDashboardCommand}" 
                                Margin="10" Padding="12,10" HorizontalContentAlignment="Left" 
                                Background="Transparent" Foreground="#333" FontSize="13" Cursor="Hand"/>
                        
                        <Button Content="👤 Trang cá nhân" Command="{Binding NavigateToProfileCommand}" 
                                Margin="10" Padding="12,10" HorizontalContentAlignment="Left" 
                                Background="Transparent" Foreground="#333" FontSize="13" Cursor="Hand"/>
                        
                        <Button Content="👥 Team của tôi" Command="{Binding NavigateToTeamsCommand}" 
                                Margin="10" Padding="12,10" HorizontalContentAlignment="Left" 
                                Background="Transparent" Foreground="#333" FontSize="13" Cursor="Hand"/>
                        
                        <Button Content="📅 Lịch tập" Command="{Binding NavigateToPersonalScheduleCommand}"
                                Margin="10" Padding="12,10" HorizontalContentAlignment="Left" 
                                Background="Transparent" Foreground="#333" FontSize="13" Cursor="Hand"/>
                        
                        <Button Content="🔔 Thông báo" 
                                Margin="10" Padding="12,10" HorizontalContentAlignment="Left" 
                                Background="Transparent" Foreground="#999" FontSize="13" IsEnabled="False"/>
                        
                        <!-- Admin Section -->
                        <Separator Margin="10,20,10,10"/>
                        <TextBlock Text="ADMIN" Margin="10,0,10,10" Foreground="#999" FontSize="11" FontWeight="Bold"/>
                        
                        <Button Content="👨‍💼 Quản lý User" Command="{Binding NavigateToAdminCommand}" 
                                Margin="10" Padding="12,10" HorizontalContentAlignment="Left" 
                                Background="Transparent" Foreground="#333" FontSize="13" Cursor="Hand"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ContentControl Content="{Binding CurrentView}" Margin="30,20"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
