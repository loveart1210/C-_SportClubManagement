<Window x:Class="SportsClubManagement.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsClubManagement.Views"
        xmlns:vm="clr-namespace:SportsClubManagement.ViewModels"
        mc:Ignorable="d"
        Title="Quản lý Câu lạc bộ Thể thao" MaxHeight="420" MaxWidth="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <!-- Title -->
                <TextBlock Text="Quản lý Câu lạc bộ Thể thao" FontSize="28" FontWeight="Bold" 
                           Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                
                <TextBlock Text="Đăng nhập tài khoản" FontSize="14" HorizontalAlignment="Center" 
                           Foreground="#666" Margin="0,0,0,20"/>
                
                <!-- Username -->
                <TextBlock Text="Tên đăng nhập" Foreground="#333" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="12,10" Margin="0,0,0,15" FontSize="14"
                         Background="White" Foreground="#333" BorderThickness="1" BorderBrush="#CCCCCC"/>
                
                <!-- Password -->
                <TextBlock Text="Mật khẩu" Foreground="#333" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <PasswordBox x:Name="txtPassword" Padding="12,10" Margin="0,0,0,15" FontSize="14"
                             Background="White" Foreground="#333" BorderThickness="1" BorderBrush="#CCCCCC"/>
                
                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#D32F2F" 
                           TextWrapping="Wrap" Margin="0,0,0,15" FontSize="12"/>
                
                <!-- Login Button -->
                <Button Content="Đăng nhập" 
                        Click="LoginBtn_Click"
                        Padding="15,12" Margin="0,0,0,15"
                        Background="#1976D2" Foreground="White" FontSize="14" FontWeight="Bold"
                        Cursor="Hand" Height="48"
                        x:Name="LoginBtn"/>
                
                <!-- Demo Hint -->
                <TextBlock Text="Dùng thử: admin / admin123 hoặc user1 / user123"
                           Foreground="#999" FontSize="11" TextAlignment="Center" Margin="0,0,0,15"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
